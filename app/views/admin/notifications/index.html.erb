<div class="columns">
  <div class="column col-12">

    <%= index_header "Notifications" %>

    <% if @notifications.any? %>

      <table class="table table-scroll">
        <thead>
          <tr>
            <th>Sent at</th>
            <th>Member</th>
            <th>Address</th>
            <th>Summary</th>
          </tr>
        </thead>

        <tbody>
          <% @notifications.each do |notification| %>
            <tr>
              <td><%= date_with_time_title notification.created_at %></td>
              <td><%= link_to preferred_or_default_name(notification.member), [:admin, notification.member] %></td>
              <td><%= notification.address %></td>
              <td><%= notification.subject %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%== pagy_bootstrap_nav(@pagy) %>

    <% else %>
      <%= empty_state "No notifications", icon: "message" %>
    <% end %>

  </div>
</div>
