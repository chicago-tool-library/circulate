<% content_for :header do %>
  <%= breadcrumbs "Item Pools", admin_item_pools_path %>
  <%= index_header @item_pool.name do %>
    <%= link_to "Edit", edit_admin_item_pool_path(@item_pool), class: "btn" %>
    <%= link_to "New Reservable Item", new_admin_item_pool_reservable_item_path(@item_pool), class: "btn" %>
  <% end %>
<% end %>

<div class="columns">

  <div class="column col-sm-12 col-12">

    <ul class="tab">
      <%= tab_link "Details", admin_item_pool_path(@item_pool) %>
      <%= tab_link "Reservable Items", admin_item_pool_reservable_items_path(@item_pool) %>
      <%= tab_link "Availability", admin_item_pool_availability_path(@item_pool) %>
    </ul>

    <%= yield %>
  </div>
</div>
