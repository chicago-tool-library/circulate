<turbo-stream action="append" target="notes">
  <template>
      <%= render partial: "admin/members/notes/note", formats: [:html], locals: {note: @note, member: @member} %>
  </template>
</turbo-stream>

<turbo-stream action="replace" target="pinned-notes">
  <template>
    <%= render partial: "admin/members/notes/list", formats: [:html], locals: {member: @member} %>
  </template>
</turbo-stream>

<turbo-stream action="replace" target="new-note">
  <template>
    <%= turbo_frame_tag "new-note" do %><% end %>
  </template>
</turbo-stream>
