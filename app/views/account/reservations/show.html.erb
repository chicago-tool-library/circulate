<div class="reservation-index">
  <%= breadcrumbs "Reservations", account_reservations_path %>
  <%= section_header @reservation.name do %>
    <% if @reservation.manager.can?(:request) %>
      <%= button_to "Add Items", account_current_reservation_path(reservation_id: @reservation), class: "btn btn-primary" %>
      <%= link_to "Edit Name and Dates", edit_account_reservation_path(@reservation), class: "btn" %>
      <%= link_to "Submit Reservation", account_reservation_submission_path(@reservation), class: "btn btn-primary" %>
    <% end %>
  <% end %>
  <div class="columns">
    <div class="col-4 col-md-12">

      <div class="panel item-panel">
        <div class="panel-header">
          <div class="panel-title">
            <strong><%= reservation_date_range(@reservation) %></strong>
          </div>
        </div>
        <div class="panel-body">
          <ul class="item-stats">
            <%= icon_stat "upload", reservation_event_datetime(@reservation.pickup_event), title: "pickup" %>
            <%= icon_stat "download", reservation_event_datetime(@reservation.dropoff_event), title: "dropoff" %>
            <%= icon_stat "package", @reservation.item_quantity, title: "items" %>
            <%= icon_stat "check-circle", @reservation.status, title: "status" %>
          </ul>
        </div>
      </div>

      <dl>
        <% @reservation.answers.includes(:stem).each do |answer| %>
          <dt><%= answer.stem.content %></dt>
          <dd><%= answer.value %></dd>
        <% end %>
      </dl>
    </div>
    <div class="column col-8 col-md-12">
      <table class="table">
        <thead>
          <th>Item</th>
          <th>Quantity</th>
          <th></th>
        </thead>
        <tbody>
          <% @reservation.reservation_holds.each do |reservation_hold| %>
            <%= render partial: "account/reservations/reservation_holds/reservation_hold", locals: {reservation: @reservation, reservation_hold: reservation_hold, editable: @reservation.manager.can?(:request)} %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
