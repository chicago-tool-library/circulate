<%= form_with(model: [:super_admin, library], builder: SpectreFormBuilder, data: {controller: "form"}) do |form| %>
  <%= form.errors %>

  <%= form.text_field :name %>
  <%= form.text_field :hostname %>
  <%= form.text_field :city %>
  <%= form.text_field :email %>
  <%= form.text_area :address, rows: 5 %>
  <%= form.text_field :member_postal_code_pattern, hint: "This can be a regular expression" %>
  <%= form.file_field :image, hint: "Take a photo with the device's camera", data: {"turbo-permanent": true} %>

  <%= form.submit %>
<% end %>
