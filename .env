# This file lists all of the environment variables that the application uses for various purposes.
#
# To change these values in your local environment, add them to .env.local (you may have to create it if
# you haven't already.)

# Database credentials
PGUSER=
PGPASSWORD=
PGHOST=

# Square API is uses to process online payments
SQUARE_ACCESS_TOKEN=SQACCESSTOKEN1234
SQUARE_LOCATION_ID=SQLOCID1234
SQUARE_ENVIRONMENT=sandbox

# Settings for the order webhook (to be notified when an order is created)
SQUARE_PAYMENT_WEBHOOK_NOTIFICATION_URL = "https://example.com/square/callback"
SQUARE_PAYMENT_WEBHOOK_SIGNATURE_KEY = "SQ_signature"

# Delay redirects to Square to account for slowness in the sandbox environment
SQUARE_SLOW_SANDBOX_DELAY=off

## Google Calendar (see README for details)
# 
# Path to Google service account credentials (used in prod)
# GOOGLE_APPLICATION_CREDENTIALS=
#
# Use these values for local development
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GOOGLE_REFRESH_TOKEN=

# Calendar to use for volunteer slots
VOLUNTEER_SLOT_CALENDAR_ID=volunteerSlots@calendar.google.com

# Calendar to use for hold slots
APPOINTMENT_SLOT_CALENDAR_ID=appointmentSlots@calendar.google.com

# Bucketeer provides AWS credentials without needing an Amazon account. Used to store image and file uploads.
BUCKETEER_AWS_ACCESS_KEY_ID=
BUCKETEER_AWS_SECRET_ACCESS_KEY=
BUCKETEER_AWS_REGION=
BUCKETEER_BUCKET_NAME=

# Require basic authentication (useful for staging sites)
HTTP_BASIC_USERS=

# Imagekit.io proxy for resizing imges on the fly
# Only set this if you have a working proxy setup!
# IMAGEKIT_URL=https://ik.imagekit.io/proxyid/

# Sendgrid is used to send email
SENDGRID_USERNAME=
SENDGRID_PASSWORD=

# Features that can be toggled
FEATURE_MAINTENANCE_WORKFLOW=on
FEATURE_GROUP_LENDING=on
FEATURE_SMS_REMINDERS=on
FEATURE_NEW_APPOINTMENTS_PAGE=on

# Twilio is used for SMS notifications
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
# The Twilio integration requires either a from phone number or a messaging
# service be specified.
# TWILIO_PHONE_NUMBER=
# TWILIO_MESSAGING_SERVICE_SID=
